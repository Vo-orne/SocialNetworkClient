<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Input field style-->
    <style name="EditTextStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">?attr/colorOfDataEntryFields</item>
        <item name="colorControlActivated">?attr/colorOfDataEntryFields</item>
        <item name="colorControlHighlight">?attr/colorOfDataEntryFields</item>
    </style>

    <style name="TextViewTitlesStyle">
        <item name="android:fontFamily">@font/open_sans_medium</item>
        <item name="android:textColor">?attr/colorMainText</item>
        <item name="android:textSize">@dimen/text_largest_size</item>
    </style>

    <style name="TextViewSubtitlesStyle">
        <item name="android:fontFamily">@font/open_sans_medium</item>
        <item name="android:textColor">?attr/colorMainText</item>
        <item name="android:textSize">@dimen/text_smallest_size</item>
    </style>

    <style name="TextViewMainTextStyle">
        <item name="android:fontFamily">@font/open_sans_medium</item>
        <item name="android:textColor">?attr/colorMainText</item>
        <item name="android:textSize">@dimen/text_large_size</item>
    </style>

    <style name="TextViewSecondMainTextStyle">
        <item name="android:fontFamily">@font/open_sans_medium</item>
        <item name="android:textColor">?attr/colorMainText</item>
        <item name="android:textSize">@dimen/text_small_size</item>
    </style>

    <style name="TextViewSecondaryTextStyle">
        <item name="android:fontFamily">@font/open_sans_medium</item>
        <item name="android:textColor">?attr/colorSecondaryText</item>
        <item name="android:textSize">@dimen/text_small_size</item>
    </style>

    <style name="TextViewInputFieldTitleStyle">
        <item name="android:fontFamily">@font/open_sans_medium</item>
        <item name="android:textColor">?attr/colorOfDataEntryFields</item>
        <item name="android:textSize">@dimen/text_small_size</item>
    </style>

    <style name="roundedCorner" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextViewInputFieldTitleStyleForAddContact">
        <item name="android:fontFamily">@font/open_sans_medium</item>
        <item name="android:textColor">?attr/colorOfDataEntryFields</item>
        <item name="android:textSize">@dimen/text_small_size</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="android:checked">false</item>
        <item name="android:text">@string/remember_me</item>
        <item name="android:fontFamily">@font/open_sans_medium</item>
        <item name="android:textSize">@dimen/text_small_size</item>
    </style>

    <style name="ButtonRegisterStyle">
        <item name="android:text">@string/register</item>
        <item name="android:textColor">?attr/colorMainText</item>
        <item name="android:textSize">@dimen/text_medium_size</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="ButtonEditProfileStyle">
        <item name="android:text">@string/edit_profile</item>
        <item name="android:textColor">?attr/colorSecondMainText</item>
        <item name="android:textSize">@dimen/text_small_size</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonSignUpExtendedCancel">
        <item name="android:fontFamily">@font/open_sans_medium</item>
        <item name="android:text">@string/cancel</item>
        <item name="android:textColor">?attr/colorSecondBackground</item>
        <item name="android:textSize">@dimen/text_small_size</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonViewMyContactsStyle">
        <item name="android:text">@string/view_my_contacts</item>
        <item name="android:textColor">?attr/colorMainText</item>
        <item name="android:textSize">@dimen/text_medium_size</item>
        <item name="textAllCaps">true</item>
    </style>
</resources>