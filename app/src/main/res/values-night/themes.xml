<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyProfile" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorFirstBackground</item>

        <!-- My own colors. -->
        <item name="colorFirstBackground">@color/blue</item>
        <item name="colorSecondBackground">@color/background</item>
        <item name="colorMainText">@color/white</item>
        <item name="colorSecondMainText">@color/grey_text</item>
        <item name="colorSecondaryText">@color/grey_text_2</item>
        <item name="colorSecondaryTextForContacts">@color/grey_text_3</item>
        <item name="colorOfDataEntryFields">@color/grey_color</item>
        <item name="colorOfDataEntryFieldsForAddContact">@color/grey_text_2</item>
        <item name="colorTextForAddContact">@color/grey_text</item>
        <item name="colorHintTextForAddContact">@color/grey_5</item>
        <item name="colorAccentButtons">@color/orange</item>
        <item name="colorGoogleButton">@color/white</item>
        <item name="colorGoogleButtonText">@color/blue</item>
    </style>
</resources>