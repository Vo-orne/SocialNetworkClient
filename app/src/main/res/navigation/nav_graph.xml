<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authActivity">

    <activity
        android:id="@+id/authActivity"
        android:name="com.example.myprofile.auth.AuthActivity"
        android:label="activity_sign_up"
        tools:layout="@layout/activity_sign_up" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.myprofile.main.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/myContactsFragment"
        android:name="com.example.myprofile.fragments.MyContactsFragment"
        android:label="MyContactsFragment" >
        <action
            android:id="@+id/action_myContactsFragment_to_addContactDialogFragment"
            app:destination="@id/addContactDialogFragment" />
        <action
            android:id="@+id/action_myContactsFragment_to_detailViewFragment"
            app:destination="@id/detailViewFragment" />
    </fragment>
    <dialog
        android:id="@+id/addContactDialogFragment"
        android:name="com.example.myprofile.mycontacts.AddContactDialogFragment"
        android:label="AddContactDialogFragment" />
    <fragment
        android:id="@+id/detailViewFragment"
        android:name="com.example.myprofile.fragments.DetailViewFragment"
        android:label="DetailViewFragment" />
</navigation>