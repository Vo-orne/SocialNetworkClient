<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorFirstBackground"
    tools:context=".ui.fragments.SignUpFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewSignUpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/smallest_margin"
        android:text="@string/titleText"
        android:theme="@style/TextViewTitlesStyle"
        app:layout_constraintBottom_toTopOf="@id/textViewSignUpSubtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewSignUpSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/smallest_margin"
        android:layout_marginBottom="@dimen/very_large_margin"
        android:gravity="center"
        android:text="@string/subtitle_text"
        android:theme="@style/TextViewSubtitlesStyle"
        app:layout_constraintBottom_toTopOf="@id/textViewSignUpEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewSignUpTitle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewSignUpEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/very_large_margin"
        android:text="@string/e_mail"
        android:theme="@style/TextViewInputFieldTitleStyle"
        app:layout_constraintBottom_toTopOf="@id/textInputLayoutSignUpEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewSignUpSubtitle" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutSignUpEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/large_margin"
        android:layout_marginEnd="@dimen/large_margin"
        app:boxBackgroundMode="none"
        app:errorEnabled="true"
        app:layout_constraintBottom_toTopOf="@id/textViewSignUpPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewSignUpEmail">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditTextSignUpEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_medium"
            android:inputType="textEmailAddress"
            android:textColor="?attr/colorMainText"
            android:textSize="@dimen/text_large_size"
            android:theme="@style/EditTextStyle" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewSignUpPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/very_large_margin"
        android:layout_marginTop="@dimen/very_large_margin"
        android:text="@string/password"
        android:theme="@style/TextViewInputFieldTitleStyle"
        app:layout_constraintBottom_toTopOf="@id/textInputLayoutSignUpPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textInputLayoutSignUpEmail" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutSignUpPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/large_margin"
        android:layout_marginEnd="@dimen/large_margin"
        app:boxBackgroundMode="none"
        app:endIconMode="password_toggle"
        app:endIconTint="?attr/colorOfDataEntryFields"
        app:errorEnabled="true"
        app:layout_constraintBottom_toTopOf="@id/checkBoxSignUpMemberInputDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewSignUpPassword">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditTextSignUpPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_medium"
            android:inputType="textPassword"
            android:textColor="?attr/colorMainText"
            android:textSize="@dimen/text_large_size"
            android:theme="@style/EditTextStyle" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkBoxSignUpMemberInputDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/very_large_margin"
        android:button="@drawable/frame_checkbox"
        android:buttonTint="?attr/colorMainText"
        android:checked="true"
        android:paddingStart="@dimen/smallest_margin"
        android:textColor="?attr/colorSecondaryText"
        android:theme="@style/CheckBoxStyle"
        app:layout_constraintBottom_toTopOf="@id/buttonSignUpGoogle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textInputLayoutSignUpPassword"
        tools:ignore="RtlSymmetry" />

    <com.example.myprofile.ui.GoogleButton
        android:id="@+id/buttonSignUpGoogle"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_google_height"
        android:layout_marginStart="@dimen/large_margin"
        android:layout_marginEnd="@dimen/large_margin"
        android:textColor="?attr/colorGoogleButtonText"
        android:textSize="@dimen/text_medium_size"
        app:icon="@drawable/ic_google"
        app:iconPaddingLeft="@dimen/icon_padding_left"
        app:iconTextSpacing="@dimen/icon_text_spacing"
        app:layout_constraintBottom_toTopOf="@id/textViewSignUpOr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:text="@string/google"
        app:textFontFamily="@font/open_sans_medium" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewSignUpOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/smallest_margin"
        android:text="@string/or"
        android:theme="@style/TextViewMainTextStyle"
        app:layout_constraintBottom_toTopOf="@id/buttonSignUpRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonSignUpRegister"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_register_height"
        android:layout_marginStart="@dimen/large_margin"
        android:layout_marginEnd="@dimen/large_margin"
        android:layout_marginTop="@dimen/smallest_margin"
        android:background="@drawable/frame_button_register"
        android:theme="@style/ButtonRegisterStyle"
        app:layout_constraintBottom_toTopOf="@id/textViewSignUpNoticeAgreement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <!-- TODO: delete - its not need -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewSignUpNoticeAgreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/smallest_margin"
        android:layout_marginBottom="@dimen/largest_margin"
        android:gravity="center"
        android:text="@string/notice_agreement"
        android:theme="@style/TextViewSubtitlesStyle"
        app:layout_constraintBottom_toTopOf="@id/textViewSignUpHaveAccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewSignUpHaveAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/have_account"
        android:theme="@style/TextViewSecondaryTextStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textViewSignUpSignIn"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewSignUpSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_margin"
        android:text="@string/sign_in"
        android:theme="@style/TextViewSecondMainTextStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textViewSignUpHaveAccount" />
</androidx.constraintlayout.widget.ConstraintLayout>