    <!-- just use constraints -->
    <LinearLayout
        android:id="@+id/linearLayoutSignUpDataEntryBlock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/largest_margin"
        android:layout_marginStart="@dimen/large_margin"
        android:layout_marginEnd="@dimen/large_margin"
        app:layout_constraintBottom_toTopOf="@id/linearLayoutSignUpButtonsBlock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewSignUpTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="@dimen/smallest_margin"
            android:text="@string/titleText"
            android:theme="@style/TextViewTitlesStyle" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewSignUpSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/smallest_margin"
            android:layout_marginBottom="@dimen/very_large_margin"
            android:text="@string/subtitle_text"
            android:theme="@style/TextViewSubtitlesStyle" />

        <!-- Why not hint? -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewSignUpEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin"
            android:text="@string/e_mail"
            android:theme="@style/TextViewInputFieldTitleStyle" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutSignUpEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="none"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextSignUpEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/open_sans_medium"
                android:inputType="textEmailAddress"
                android:textColor="?attr/colorMainText"
                android:textSize="@dimen/text_large_size"
                android:theme="@style/EditTextStyle" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Why not hint? -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewSignUpPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginTop="@dimen/very_large_margin"
            android:text="@string/password"
            android:theme="@style/TextViewInputFieldTitleStyle" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutSignUpPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="none"
            app:endIconMode="password_toggle"
            app:endIconTint="?attr/colorOfDataEntryFields"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextSignUpPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_medium"
                android:inputType="textPassword"
                android:textColor="?attr/colorMainText"
                android:textSize="@dimen/text_large_size"
                android:theme="@style/EditTextStyle" />

        </com.google.android.material.textfield.TextInputLayout>

        <CheckBox
            android:id="@+id/checkBoxSignUpMemberInputDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/frame_checkbox"
            android:buttonTint="?attr/colorMainText"
            android:checked="true"
            android:paddingStart="@dimen/smallest_margin"
            android:textColor="?attr/colorSecondaryText"
            android:theme="@style/CheckBoxStyle"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>

    <!-- just use constraints -->
    <LinearLayout
        android:id="@+id/linearLayoutSignUpButtonsBlock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="@dimen/large_margin"
        android:layout_marginEnd="@dimen/large_margin"
        app:layout_constraintBottom_toBottomOf="@id/linearLayoutSingUpSignUpBlock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutSignUpDataEntryBlock">

        <com.example.myprofile.ui.auth.GoogleButton
            android:id="@+id/buttonSignUpGoogle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_google_height"
            android:textColor="?attr/colorGoogleButtonText"
            android:textSize="@dimen/text_medium_size"
            app:icon="@drawable/ic_google"
            app:iconPaddingLeft="@dimen/icon_padding_left"
            app:iconTextSpacing="@dimen/icon_text_spacing"
            app:text="@string/google"
            app:textFontFamily="@font/open_sans_medium" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewSignUpOr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/smallest_margin"
            android:text="@string/or"
            android:theme="@style/TextViewMainTextStyle" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonSignUpRegister"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_register_height"
            android:layout_marginTop="@dimen/smallest_margin"
            android:background="@drawable/frame_button_register"
            android:theme="@style/ButtonRegisterStyle" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewSignUpNoticeAgreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/smallest_margin"
            android:gravity="center"
            android:text="@string/notice_agreement"
            android:theme="@style/TextViewSubtitlesStyle" />
    </LinearLayout>

    <!-- just use constraints -->
    <LinearLayout
        android:id="@+id/linearLayoutSingUpSignUpBlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/medium_margin"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewSignUpHaveAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/have_account"
            android:theme="@style/TextViewSecondaryTextStyle" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewSignUpSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin"
            android:text="@string/sign_in"
            android:theme="@style/TextViewSecondMainTextStyle" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>