<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            android:id="@+id/viewTop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#242235"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintVertical_bias="0"/>


        <ImageButton
            android:id="@+id/buttonAddContactBack"
            android:layout_width="@dimen/min_height_element"
            android:layout_height="@dimen/min_height_element"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginTop="@dimen/medium_margin"
            android:background="@null"
            android:contentDescription="@string/back_button"
            android:src="@drawable/ic_back_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/add_contact"
            android:theme="@style/TextViewTitlesStyle"
            app:layout_constraintBottom_toBottomOf="@id/buttonAddContactBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/buttonAddContactBack" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageViewAddContactContactAvatar"
            android:layout_width="@dimen/image_user_avatar_size"
            android:layout_height="@dimen/image_user_avatar_size"
            android:contentDescription="@string/content_description_user_avatar"
            android:src="@drawable/default_user_photo"
            android:theme="@style/roundedCorner"
            app:layout_constraintBottom_toBottomOf="@id/viewTop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonAddContactBack" />

        <ImageView
            android:id="@+id/imageViewAddContactAddPhoto"
            android:layout_width="@dimen/image_add_photo_size"
            android:layout_height="@dimen/image_add_photo_size"
            android:contentDescription="@string/displays_the_add_photo_button"
            android:src="@drawable/ic_add_photo_button"
            app:layout_constraintBottom_toBottomOf="@id/imageViewAddContactContactAvatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageViewAddContactContactAvatar"
            app:layout_constraintTop_toTopOf="@id/imageViewAddContactContactAvatar" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutAddContactUsername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_marginEnd="@dimen/medium_margin"
            app:boxBackgroundMode="none"
            app:errorEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewTop">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextAddContactUsername"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/open_sans_medium"
                android:hint="@string/username"
                android:inputType="text"
                android:minHeight="@dimen/min_height_element"
                android:textColor="?attr/colorTextForAddContact"
                android:textColorHint="?attr/colorHintTextForAddContact"
                android:textSize="@dimen/text_large_size"
                android:theme="@style/EditTextStyle" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutAddContactCareer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginEnd="@dimen/medium_margin"
            app:boxBackgroundMode="none"
            app:errorEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textInputLayoutAddContactUsername">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextAddContactCareer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/open_sans_medium"
                android:hint="@string/career"
                android:inputType="text"
                android:minHeight="@dimen/min_height_element"
                android:textColor="?attr/colorTextForAddContact"
                android:textColorHint="?attr/colorHintTextForAddContact"
                android:textSize="@dimen/text_large_size"
                android:theme="@style/EditTextStyle" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutAddContactEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginEnd="@dimen/medium_margin"
            app:boxBackgroundMode="none"
            app:errorEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textInputLayoutAddContactCareer">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextAddContactEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/open_sans_medium"
                android:hint="@string/e_mail"
                android:inputType="textEmailAddress"
                android:minHeight="@dimen/min_height_element"
                android:textColor="?attr/colorTextForAddContact"
                android:textColorHint="?attr/colorHintTextForAddContact"
                android:textSize="@dimen/text_large_size"
                android:theme="@style/EditTextStyle" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutAddContactPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginEnd="@dimen/medium_margin"
            app:boxBackgroundMode="none"
            app:errorEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textInputLayoutAddContactEmail">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextAddContactPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/open_sans_medium"
                android:hint="@string/phone"
                android:inputType="phone"
                android:minHeight="@dimen/min_height_element"
                android:textColor="?attr/colorTextForAddContact"
                android:textColorHint="?attr/colorHintTextForAddContact"
                android:textSize="@dimen/text_large_size"
                android:theme="@style/EditTextStyle" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutAddContactAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginEnd="@dimen/medium_margin"
            app:boxBackgroundMode="none"
            app:errorEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textInputLayoutAddContactPhone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextAddContactAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/open_sans_medium"
                android:hint="@string/address"
                android:inputType="text"
                android:minHeight="@dimen/min_height_element"
                android:textColor="?attr/colorTextForAddContact"
                android:textColorHint="?attr/colorHintTextForAddContact"
                android:textSize="@dimen/text_large_size"
                android:theme="@style/EditTextStyle" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutAddContactDateOfBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginEnd="@dimen/medium_margin"
            app:boxBackgroundMode="none"
            app:errorEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textInputLayoutAddContactAddress">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextAddContactDateOfBirth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/open_sans_medium"
                android:hint="@string/date_of_birth"
                android:inputType="date"
                android:minHeight="@dimen/min_height_element"
                android:textColor="?attr/colorTextForAddContact"
                android:textColorHint="?attr/colorHintTextForAddContact"
                android:textSize="@dimen/text_large_size"
                android:theme="@style/EditTextStyle" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonAddContactSave"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_view_my_contacts_height"
            android:layout_marginStart="@dimen/large_margin"
            android:layout_marginEnd="@dimen/large_margin"
            android:layout_marginBottom="@dimen/large_margin"
            android:background="@drawable/frame_button_view_my_contacts"
            android:text="@string/save"
            android:theme="@style/ButtonViewMyContactsStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textInputLayoutAddContactDateOfBirth" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>