<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorDialogLoadPhoto">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewLoadPhoto"
        android:layout_width="0dp"
        android:layout_height="86dp"
        android:layout_marginStart="@dimen/smallest_margin"
        android:layout_marginTop="@dimen/smallest_margin"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewLoadPhotoGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/largest_margin"
        android:fontFamily="@font/open_sans_medium"
        android:text="@string/open_gallery"
        android:textColor="?attr/colorMainText"
        android:textSize="@dimen/text_small_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recyclerViewLoadPhoto" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewLoadPhotoCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_marginBottom="@dimen/large_margin"
        android:fontFamily="@font/open_sans_medium"
        android:text="@string/cancel"
        android:textColor="?attr/colorSecondaryText"
        android:textSize="@dimen/text_small_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewLoadPhotoGallery"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>