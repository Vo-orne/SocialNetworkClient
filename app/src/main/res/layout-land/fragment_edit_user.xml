<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/viewTop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?attr/colorFirstBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <ImageButton
            android:id="@+id/buttonEditUserBack"
            android:layout_width="@dimen/min_height_element"
            android:layout_height="@dimen/min_height_element"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginTop="@dimen/medium_margin"
            android:background="@null"
            android:contentDescription="@string/back_button"
            android:src="@drawable/ic_back_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/edit_user"
            android:theme="@style/TextViewTitlesStyle"
            app:layout_constraintBottom_toBottomOf="@id/buttonEditUserBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/buttonEditUserBack" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageViewEditUserContactAvatar"
            android:layout_width="@dimen/image_user_avatar_size"
            android:layout_height="@dimen/image_user_avatar_size"
            android:contentDescription="@string/content_description_user_avatar"
            android:src="@drawable/default_user_photo"
            android:theme="@style/roundedCorner"
            app:layout_constraintBottom_toBottomOf="@id/viewTop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonEditUserBack" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutEditUserUsername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_marginEnd="@dimen/medium_margin"
            app:boxBackgroundMode="none"
            app:errorEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewTop">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextEditUserUsername"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/open_sans_medium"
                android:hint="@string/username"
                android:inputType="text"
                android:minHeight="@dimen/min_height_element"
                android:textColor="?attr/colorTextForEditUser"
                android:textColorHint="?attr/colorHintTextForEditUser"
                android:textSize="@dimen/text_large_size"
                android:theme="@style/EditTextStyle" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutEditUserPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginEnd="@dimen/medium_margin"
            app:boxBackgroundMode="none"
            app:errorEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textInputLayoutEditUserUsername">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextEditUserPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/open_sans_medium"
                android:hint="@string/phone"
                android:inputType="phone"
                android:minHeight="@dimen/min_height_element"
                android:textColor="?attr/colorTextForEditUser"
                android:textColorHint="?attr/colorHintTextForEditUser"
                android:textSize="@dimen/text_large_size"
                android:theme="@style/EditTextStyle" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutEditUserAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginEnd="@dimen/medium_margin"
            app:boxBackgroundMode="none"
            app:errorEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textInputLayoutEditUserPhone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextEditUserAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/open_sans_medium"
                android:hint="@string/address"
                android:inputType="text"
                android:minHeight="@dimen/min_height_element"
                android:textColor="?attr/colorTextForEditUser"
                android:textColorHint="?attr/colorHintTextForEditUser"
                android:textSize="@dimen/text_large_size"
                android:theme="@style/EditTextStyle" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutEditUserCareer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginEnd="@dimen/medium_margin"
            app:boxBackgroundMode="none"
            app:errorEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textInputLayoutEditUserAddress">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextEditUserCareer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/open_sans_medium"
                android:hint="@string/career"
                android:inputType="text"
                android:minHeight="@dimen/min_height_element"
                android:textColor="?attr/colorTextForEditUser"
                android:textColorHint="?attr/colorHintTextForEditUser"
                android:textSize="@dimen/text_large_size"
                android:theme="@style/EditTextStyle" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutEditUserDateOfBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginEnd="@dimen/medium_margin"
            app:boxBackgroundMode="none"
            app:errorEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textInputLayoutEditUserCareer">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextEditUserDateOfBirth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/open_sans_medium"
                android:hint="@string/date_of_birth"
                android:inputType="date"
                android:minHeight="@dimen/min_height_element"
                android:textColor="?attr/colorTextForEditUser"
                android:textColorHint="?attr/colorHintTextForEditUser"
                android:textSize="@dimen/text_large_size"
                android:theme="@style/EditTextStyle" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonEditUserSave"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_view_my_contacts_height"
            android:layout_marginStart="@dimen/large_margin"
            android:layout_marginEnd="@dimen/large_margin"
            android:layout_marginBottom="@dimen/large_margin"
            android:background="@drawable/frame_button_view_my_contacts"
            android:text="@string/save"
            android:theme="@style/ButtonViewMyContactsStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textInputLayoutEditUserDateOfBirth"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="?attr/colorAccentButtons"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>