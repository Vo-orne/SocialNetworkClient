<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentMyContacts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorFirstBackground"
    tools:context=".ui.fragments.MyContactsFragment">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/colorSecondBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guidelineMyContactsContactFieldBoundary" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMyContactsContactFieldBoundary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <ImageButton
        android:id="@+id/imageButtonMyContactsBack"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@null"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginStart="@dimen/large_margin"
        android:contentDescription="@string/back_button"
        android:src="@drawable/ic_back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textViewMyContactsContacts"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>

    <TextView
        android:id="@+id/textViewMyContactsContacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin"
        android:text="@string/contacts"
        android:theme="@style/TextViewTitlesStyle"
        app:layout_constraintStart_toEndOf="@id/imageButtonMyContactsBack"
        app:layout_constraintEnd_toStartOf="@id/imageButtonMyContactsSearch"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/imageButtonMyContactsSearch"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginEnd="@dimen/large_margin"
        android:background="@null"
        android:contentDescription="@string/search_button"
        android:src="@drawable/ic_search_button"
        app:layout_constraintStart_toEndOf="@id/textViewMyContactsContacts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textViewMyContactsAddContacts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/large_margin"
        android:layout_marginTop="@dimen/medium_margin"
        android:fontFamily="@font/open_sans_medium"
        android:text="@string/add_contacts"
        android:textColor="?attr/colorMainText"
        android:textSize="@dimen/text_small_size"
        app:layout_constraintBottom_toBottomOf="@id/guidelineMyContactsContactFieldBoundary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewMyContactsContacts" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewContacts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:listitem="@layout/contact_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guidelineMyContactsContactFieldBoundary" />
</androidx.constraintlayout.widget.ConstraintLayout>